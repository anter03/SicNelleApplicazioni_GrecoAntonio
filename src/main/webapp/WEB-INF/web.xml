<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <session-timeout>15</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
            <same-site>Strict</same-site>
        </cookie-config>
    </session-config>

    <filter>
        <filter-name>RateLimitingFilter</filter-name>
        <filter-class>com.sicnelleapplicazioni.filter.RateLimitingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RateLimitingFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>XFrameOptionsFilter</filter-name>
        <filter-class>com.sicnelleapplicazioni.filter.XFrameOptionsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XFrameOptionsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SessionControlFilter</filter-name>
        <filter-class>com.sicnelleapplicazioni.filter.SessionControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionControlFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

</web-app>
